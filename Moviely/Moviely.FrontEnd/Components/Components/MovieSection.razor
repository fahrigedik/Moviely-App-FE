@using Moviely.FrontEnd.Services
@rendermode InteractiveServer
@attribute [StreamRendering(true)]



@if (_movieService == null)
{
    <h1> Loading Data </h1>
}
else {

    <div class="movie-container">
        @if (popularData == null)
        {
            <h1>"Loading Popular Data"</h1>
        }
        else
        {
            @foreach (var item in popularData.Results)
            {
                <MovieCard PopularMovieData="item"></MovieCard>
            }
        }
    </div>
}